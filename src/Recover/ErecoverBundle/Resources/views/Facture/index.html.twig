{% extends "RecoverErecoverBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block recovererecover_body %}
    <h1>Facture list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Montantht</th>
                <th>Dateedition</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('facture_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.montantht }}</td>
                <td>{% if entity.dateedition %}{{ entity.dateedition|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('facture_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('facture_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       
    <div class="pagination"> <ul>
{# On utilise la fonction range(a, b) qui creÃÅe un tableau de valeurs entre a et b #}
{% for p in range(1, nombrePage) %}
<li{% if p == page %} class="active"{% endif %}>
<a href="{{ path('facture', {'page': p}) }}">{{ p
}}</a>
</li>
{% endfor %} </ul>
</div>
 <p>
        
            <a class="btn btn-primary btn-large" href="{{ path('facture_new') }}">
                Create a new entry
            </a>
        
    </p>
    {% endblock %}
